<%- include("../partials/header.ejs") %>

<!-- MAIN CONTENT -->
<div class="container">
    <div class="col-md-offset-1 col-md-10">
      <h3>Faculty Information</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/faculties/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a faculty</a>

      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Faculty ID</th>
              <th class="text-center">Faculty Name</th>
              <th class="text-center">Department</th>
              <th class="text-center">Subject</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < faculties.length; count++) { %>
            <tr>
              <td><%= faculties[count].Facultyid %></td>
              <td class="text-center"><%= faculties[count].Facultyname %></td>
              <td class="text-center"><%= faculties[count].Department %></td>
              <td class="text-center"><%= faculties[count].Subject %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/faculties/<%= faculties[count]._id %>" class="btn btn-primary">
                <i class="fa fa-plus"></i> Edit a faculty</a>
              </td>
              <td class="text-center">
              <!-- ------------------------ -->
              <!-- DELETE BUTTON -->
              <!-- ------------------------ -->
              
              <a href="/faculties/delete?Facultyname=<%= faculties[count].Facultyname %>" class="btn btn-warning btn-sm">
                <i class="fas fa-trash"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <!-- ------------------------ -->
      <!-- ADD the EDIT BUTTON HERE -->
      <!-- ------------------------ -->
